<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
	xmlns:local="clr-namespace:CSharpNetScan"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="CSharpNetScan.MainPage">
		<VerticalStackLayout
		Padding="20,0"
		Spacing="10">
		<ContentPage.Resources>
			<Color
				x:Key="MainLabelTextColor">Orange</Color>
		</ContentPage.Resources>
		<Label
			x:Name="lbl_1"
			Text="Net in .NET"
			FontAttributes="Bold"
			TextColor="{DynamicResource MainLabelTextColor}"
			FontSize="44" />
		<Label
			x:Name="lbl_2"
			Padding="20,0"
			Text="MAUI in action"
			TextColor="Aqua"
			FontSize="40"
			TextDecorations="Underline"
			Rotation="-5" />
		<Entry
			x:Name="entry"
			MaxLength="50"
			ClearButtonVisibility="WhileEditing"
			Keyboard="Url"
			ReturnType="Go"
			Text=""
			Placeholder="Enter url" />
		<Label
			x:Name="lbl_Input"
			Text="Write your source url"
			TextColor="White" />
		<Button
		    x:Name="url_Button"
			Text="Push the button" />
	</VerticalStackLayout>
</ContentPage>
